<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/round_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/next_round"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-15sp"
        android:text="" />

    <ImageView
        android:id="@+id/target"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/targz" >
    </ImageView>

    <Button
        android:id="@+id/zero"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_centerHorizontal="true"
                android:layout_above="@+id/one"
        android:layout_marginBottom="2dp"
        android:background="@android:color/transparent"
        android:onClick="onClick"
        android:text="0"
        android:textColor="#000" />

    <Button
        android:id="@+id/one"
        android:layout_width="100sp"
        android:layout_height="44sp"
        android:layout_above="@+id/two"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:background="@android:color/transparent"
        android:onClick="onClick"
        android:text="1"
        android:textColor="#000" />

    <Button
        android:id="@+id/two"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_above="@+id/three"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2sp"
        android:background="@android:color/transparent"
        android:onClick="onClick"
        android:text="2"
        android:textColor="#000" />

    <Button
        android:id="@+id/three"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_above="@+id/four"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2sp"
        android:background="@android:color/transparent"
        android:onClick="onClick"
        android:text="3"
        android:textColor="#fff" />

    <Button
        android:id="@+id/four"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_above="@+id/five"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2sp"
        android:background="@android:color/transparent"
        android:onClick="onClick"
        android:text="4"
        android:textColor="#fff" />

    <Button
        android:id="@+id/five"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_above="@+id/six"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2sp"
        android:background="@android:color/transparent"
        android:onClick="onClick"
        android:text="5"
        android:textColor="#000" />

    <Button
        android:id="@+id/six"
        android:layout_width="95sp"
        android:layout_height="40sp"
        android:layout_above="@+id/seven"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2sp"
        android:background="@android:color/transparent"
        android:onClick="onClick"
        android:text="6"
        android:textColor="#000" />

    <Button
        android:id="@+id/seven"
        android:layout_width="90sp"
        android:layout_height="40sp"
        android:layout_above="@+id/eight"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2sp"
        android:background="@android:color/transparent"
        android:onClick="onClick"
        android:text="7"
        android:textColor="#fff" />

    <Button
        android:id="@+id/eight"
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:layout_above="@+id/nine"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2sp"
        android:background="@android:color/transparent"
        android:onClick="onClick"
        android:text="8"
        android:textColor="#fff" />

    <Button
        android:id="@+id/nine"
        android:layout_width="60sp"
        android:layout_height="40sp"
        android:layout_above="@+id/ten"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2sp"
        android:background="@android:color/transparent"
        android:onClick="onClick"
        android:text="9"
        android:textColor="#000" />

    <Button
        android:id="@+id/ten"
        android:layout_width="46sp"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0sp"
        android:background="@android:color/transparent"
        android:onClick="onClick"
        android:text="10"
        android:textColor="#000" />
    
    <Button
        android:id="@+id/next_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tenx"
        android:layout_marginRight="5sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/main_activity_button"
        android:onClick="onClick"
        android:padding="5sp"
        android:text="Next Round" />

    <Button
        android:id="@+id/end_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/next_round"
        android:layout_below="@+id/next_round"
        android:layout_marginTop="10sp"
        android:background="@drawable/main_activity_button"
        android:onClick="onClick"
        android:padding="5sp"
        android:text="Save Session" />
    
    <Button
        android:id="@+id/undo_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/next_round"
        android:layout_below="@+id/end_session"
        android:layout_marginTop="10sp"
        android:background="@drawable/main_activity_button"
        android:onClick="onClick"
        android:padding="5sp"
        android:text="Undo Last" />

    <Button
        android:id="@+id/help"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5sp"
        android:layout_marginRight="5sp"
        android:background="@drawable/qmark"
        android:onClick="onClick" />

</RelativeLayout>