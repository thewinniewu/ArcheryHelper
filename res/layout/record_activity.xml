<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/recordsbg" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/chart_record_activity"
        android:layout_width="300sp"
        android:layout_height="250sp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/record_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="20sp"
            android:text="Session Records"
            android:textSize="24sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/session_list"
        android:layout_width="300sp"
        android:layout_height="150sp"
        android:layout_below="@+id/chart_record_activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0sp" >
    </ListView>

    <Button
        android:id="@+id/delete_records"
        android:layout_width="120sp"
        android:layout_height="30sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20sp"
        android:background="@drawable/main_activity_button"
        android:onClick="onClick"
        android:text="Delete Records" />

</RelativeLayout>